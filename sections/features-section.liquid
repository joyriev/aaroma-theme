<style>
    span.td-media-with-details__conector {
    -webkit-transform: rotate(180deg) scaleY(-1);
    transform: rotate(180deg) scaleY(-1);
    position: absolute;
}
span.td-media-with-details__conector_right {
    position: absolute;
    right: 200px;
    margin-top: 2px;
}
  .perfume-features {
    padding: 60px 20px;
    background: #fff;
  }

  .perfume-features .features-grid {
    display: flex;
    flex-direction: column;
    gap: 80px;
  }
  .perfume-features .feature h3 {
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
  }
  .perfume-features .feature p {
    font-size: 14px;
    line-height: 1.5;
    color: #444;
    font-weight:400;
  }
  .perfume-features .video-box video {
    width: 100%;
    border-radius: 10px;
    display: block;
  }
  .perfume-features .video-box {
    flex: 0 0 500px;
    width: 100%;
    display: flex;
    height:500px;
}
  .perfume-features{
    max-width:1080px;
    margin:auto;
}
.container.container-video-block {
    display:flex;
    gap:30px;
    align-items:center;
    position:relative;
}
.container.container-video-block h3{
        max-width: unset;
        width: 100%;
        margin: 0;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
       font-size:18px;
       line-height:26px;
       font-weight:500;
}

  .perfume-features .left { text-align: right; }
  .perfume-features .right { text-align: left; }
@media (max-width:1024px){
    .container.container-video-block{
        display:flex;
        flex-direction:column;
        gap:0px;
    }
    .perfume-features{
    padding:0px 20px;
}
    .perfume-features .video-box video{
        order:1;
    }
    .perfume-features .features-grid{
        order:2;
    }
    span.td-media-with-details__conector{
        display:none;
    }
    .td-media-with-details__conector_right{
        display:none;
    }
    .container.container-video-block h3{
        text-align:left;
    }
    .perfume-features .feature p{
        text-align:left;
    }
    .perfume-features .video-box{
    max-height: 300px;
    max-width: 100%;
    padding: 0;
    margin-bottom:40px;
    }
    .perfume-features .video-box video{
        height:350px
    }
    .perfume-features .features-grid{
        gap:20px;
        margin-bottom: 20px;
    }
    .feature h3:before{
    display: block;
    content: "";
    width: 10px;
    height: 10px;
    border: 1px solid rgb(160 120 63);
    border-radius: 20px;
    background-color: rgb(160 120 63);
    display: inline-block;
    margin-right: 10px;
}
}
